<html>
    <head>
        <title>Inbox {{ if messages | array.size > 0 -}} &ndash; {{ messages | array.size}} Unread {{- end }}</title>
        <style>
            body {
                font: 1.2em sans-serif;
            }

            table {
                border-collapse: collapse;
            }

            thead {
                font-weight: bold;
            }

            td {
                padding: 0.25rem 1rem;
                border: 1px solid #eee;
            }

            td form {
                margin: 0;
            }
        </style>
        <link rel="icon" href="https://unpkg.com/mono-icons@1.0.0/svg/inbox.svg" type="image/svg+xml"/>
        <link rel="manifest" href="/manifest.webmanifest"/>
        <script>
            if ("serviceWorker" in navigator) {
                navigator.serviceWorker.register("/service-worker.js");
            }
        </script>
    </head>
    <body>
        <h1>New Message</h1>
        <form action="/api/AddItem" method="post">
            <input type="hidden" name="page" value=""/>
            <textarea name="content"></textarea>
            <div><input type="submit" value="Submit"/></div>
        </form>

        {{~ if authenticated ~}}
        <h1>Inbox</h1>
        {{~ if messages | array.size > 0 ~}}
        <table>
            <thead>
                <tr>
                    <td>Message</td>
                    <td>Date</td>
                    <td>Time</td>
                    <td>IP Address</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {{~ for $message in messages ~}}
                <tr>
                    <td>{{ $message.content | html.escape }}</td>
                    <td>{{ $message.created | date.to_string "%a, %d %b, %Y" }}</td>
                    <td>{{ $message.created | date.to_string "%T" }}</td>
                    <td><code>{{ $message.author }}</code></td>
                    <td>
                        <form action="/api/MarkRead?message={{ $message.uuid }}" method="post">
                            <input type="hidden" name="page" value=""/>
                            <input type="submit" value="Read"/>
                        </form>
                    </td>
                </tr>
                {{~ end ~}}
            </tbody>
        </table>
        {{~ else ~}}
        <div style="font-style: italic;">No unread messages</div>
        {{~ end ~}}
        {{~ end ~}}
    </body>
</html>
